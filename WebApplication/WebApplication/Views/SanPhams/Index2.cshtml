@model IEnumerable<WebApplication.Models.SanPham>

@{
    ViewBag.Title = "Home Page";
}
<section class="hero-slider">
    <div class="hero-items owl-carousel owl-loaded">
        <div class="owl-stage-outer">
            <div class="owl-stage" style="transform: translate3d(-2182px, 0px, 0px); transition: all 0s ease 0s; width: 7639px;">
                <div class="owl-item cloned" style="width: 1091.2px;">
                    <div class="single-slider-item set-bg" data-setbg=@Url.Content("~/img/nui1.jpg") style="background-image: url(&quot;img/slider-2.jpg&quot;);">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1>MYTRIP</h1>
                                    <h2>Tự do khám phá</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="owl-item cloned" style="width: 1091.2px;">
                    <div class="single-slider-item set-bg" data-setbg=@Url.Content("~/img/halong.jpg" ) style="background-image: url(&quot;img/slider-1.jpg&quot;);">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1>MYTRIP</h1>
                                    <h2>Thế Giới Quanh Ta!</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="owl-item cloned" style="width: 1091.2px;">
                    <div class="single-slider-item set-bg" data-setbg=@Url.Content("~/img/nui2.jpg" ) style="background-image: url(&quot;img/slider-2.jpg&quot;);">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1>MYTRIP</h1>
                                    <h2>Thế Giới Quanh Ta!</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><div class="owl-nav"><button type="button" role="presentation" class="owl-prev"><i class="fa fa-angle-left"></i></button><button type="button" role="presentation" class="owl-next"><i class="fa fa-angle-right"></i></button></div><div class="owl-dots"><button role="button" class="owl-dot active"><span></span></button><button role="button" class="owl-dot"><span></span></button><button role="button" class="owl-dot"><span></span></button></div>
    </div>
 </section>
<section class="latest-products spad">
    <div class="container">
        <div class="product-filter">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-title">
                        <h2>@(ViewBag.Keyword != null ? "Search Results" : "All Products")</h2>
                    </div>

                </div>
            </div>
        </div>
        <div class="row" id="product-list">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-sm-6 mix all dresses bags">
                    <div class="single-product-item">
                        <figure>
                            <a href="@Url.Action("Details", new {id = product.MaSanPham })"><img src="@Url.Action("Picture", "SanPhams", new { product.MaSanPham })" width="370px" height="400px" alt="Demo picture"></a>
                            <div class="p-status sale">sale</div>
                        </figure>
                        <div class="product-text">
                            <h6><a href="@Url.Action("Details", new {id = product.MaSanPham} )">@product.ThongTinSanPham</a></h6>
                            <p>@product.GiaTien@("Đ")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<section class="features-section spad">
    <div class="features-ads">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="single-features-ads first">
                        <img src="@Url.Content("~/img/icons/f-delivery.png")" alt="">
                        <h4>Free shipping</h4>
                        <p>
                            Miễn phí giao hàng mọi miền tổ quốc
                        </p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="single-features-ads second">
                        <img src="@Url.Content("~/img/icons/coin.png")" alt="">
                        <h4>100% Money back </h4>
                        <p>
                            Hoàn tiền nếu phát hiện vé giả
                        </p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="single-features-ads">
                        <img src="@Url.Content("~/img/icons/chat.png")" alt="">
                        <h4>Online support 24/7</h4>
                        <p>
                            Hỗ trợ trực tuyến 24/7
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Features Box -->
    <div class="features-box">
    </div>
</section>
